var win = Ti.UI.createWindow();
var run = function(lat, lng){
var mapModule = ti.map;
var mapview = Titanium.Map.createView({
    mapType: Titanium.Map.STANDARD_TYPE,
    region: {latitude:lat, 
    		longitude:lng,
            latitudeDelta:0.5, 
            longitudeDelta:0.5},
    animate:true,
    regionFit:true,
    userLocation:false
});
};
win.add(mapview);
win.open();