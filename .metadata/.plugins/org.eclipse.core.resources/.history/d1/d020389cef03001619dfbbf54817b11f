var Ui = function(UiData){
	var mainWin = Ti.UI.createWindow({
		backgroundColor: "#fff",
		
	});
	var image = Ti.UI.createImageView({
		image: "images/back.png",
		width: "100%",
		height: "100%"
	});
		var icon = Ti.UI.createImageView({
		image: UiData.icon ,
		top: "65%",
	});
	var city = Ti.UI.createLabel({
		color: "fff",
		text: UiData.city,
		width: "100%",
		top: "10%",
		font: {fontFamily: "roboto", fontSize: 20, fontWeight: "bold"},
		textAlign: "center"
	});
	var state = Ti.UI.createLabel({
		color: "#fff",
		text: UiData.city + "," + UiData.state,
		width: "100%",
		top: "10%",
		font: {fontFamily: "roboto", fontSize: 25, fontWeight: "bold"},
		textAlign: "center"
	});
	var temp = Ti.UI.createLabel({
		color: "#fff",
		text: "Current temp: " + UiData.temp + "° f",
		top: "30%",
		width: "100%",
		left: 5,
		font: {fontFamily: "roboto", fontSize: 25, fontWeight: "bold"},
		textAlign: "center"
	});
	var feel = Ti.UI.createLabel({
		color: "#fff",
		text: "feels like: " + UiData.feelsLike + "° f",
		top: "36%",
		width: "100%",
		left: 5,
		font: {fontFamily: "roboto", fontSize: 15, fontWeight: "bold"},
		textAlign: "center"
	});
	var humidity = Ti.UI.createLabel({
		color: "#fff",
		text: "relative humidity: " + UiData.humidity,
		top: "55%",
		width: "100%",
		font: {fontFamily: "roboto", fontSize: 20, fontWeight: "bold"},
		textAlign: "center"
	});
	var wind = Ti.UI.createLabel({
		text: "wind speed: " + UiData.wind + " mph",
		color: "#fff",
		top: "60%"
		
	});
	var forecast =Ti.UI.createLabel({
		text: UiData.forecast,
		color: "#fff",
		top: "70%"
	});
	var weather = Ti.UI.createLabel({
		text: UiData.weater,
		color: "#fff",
		top: "75%"
	});
	var time = Ti.UI.createLabel({
		text: UiData.time,
		color: "#fff",
		top: "80%"
	});
	mainWin.add(image);
	//mainWin.add(city);
	mainWin.add(state);
	mainWin.add(temp);
	mainWin.add(feel);
	mainWin.add(humidity);
	mainWin.add(wind);
	mainWin.add(icon);
	mainWin.add(forecast);
	mainWin.add(weather);
	mainWin.add(time);
	mainWin.open();
};
exports.Ui = Ui;
